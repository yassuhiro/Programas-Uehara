#include <iostream>
#include <stdlib.h>
#include <typeinfo>

using namespace std;

int Fatorial (int n)
{   
    int i;
    i = n - 1; 
    for (i; i!=1; i--)
        n = n * i;
    return n;
}

int main() {
	int numero;
	
	cout << "Digite um numero: ";
	cin >> numero;
	
	cout << "O calculo fatorial de " << numero << "!: " <<Fatorial(numero);

}
